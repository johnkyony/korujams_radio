.modal-dialog
  .modal-content
    = form_for @playlist, remote: true, html: { style: "display:inline;" } do |f|
      .modal-body
        %ul.errors
        .form-group
          = f.label :name, class:"control-label"
          = f.text_field :name, class: "form-control"
          = f.label :playlist_cover , class:"control-label"
          = f.text_field :playlist_cover, class: "form-control"
        
      .modal-footer
        = f.submit class: "btn btn-primary"
        = link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"}