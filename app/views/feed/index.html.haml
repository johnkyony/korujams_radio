#infinite-scrolling
  = will_paginate @feed 
.row
  - @feed.each do |post|
    .col-sm-6.col-md-4      
      .thumbnail
        %img{:alt => "#{post.title}", :src => "#{post.art_work}"}/
        .caption
          
          / %h3= post.title         
        = link_to song_audio_player_index_path(post.id), title: "#{post.title}", rel: 'tooltip' , remote: true do
          %i.glyphicon.glyphicon-play
        / = link_to track_playlist_path, remote: true , method: :put do
        /   %i.glyphicon.glyphicon-plus
           
        / = link_to "Play" ,track_audio_player_index_path(post.id), title: "#{post.title}", rel: 'tooltip' , remote: true, class: "btn btn-primary"
       
    %br          
#product-modal.modal.fade
 